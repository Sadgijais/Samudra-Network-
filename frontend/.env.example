# Environment Variables Template
# Copy this file to .env and fill in the actual values

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api

# Application Configuration  
VITE_APP_NAME=Samudra Alert
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Marine Incident Reporting & Monitoring System

# Map Configuration
VITE_MAP_DEFAULT_LAT=19.0760
VITE_MAP_DEFAULT_LNG=72.8777
VITE_MAP_DEFAULT_ZOOM=10

# External Services
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
VITE_OPENCAGE_API_KEY=your_opencage_api_key_here

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=false

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:5174,https://samudra-alert.vercel.app

# Social Media Links
VITE_GITHUB_URL=https://github.com/ayushsingh08-ds/Samudra-Alert
VITE_SUPPORT_EMAIL=support@samudra-alert.com

# Deployment
VITE_ENVIRONMENT=development
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_DATE=2025-09-19

# Monitoring & Logging
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_LOG_LEVEL=info

# Performance
VITE_ENABLE_SW=true
VITE_CACHE_VERSION=v1